<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coursework">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Coursework">
        <activity
            android:name=".UserGuide"
            android:exported="false"
            android:screenOrientation="portrait" />

        <service
            android:name=".UploadRoutineStats"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".UploadGameStats"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".Receiver" />

        <activity
            android:name=".FrameStats"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RoutineStats"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InRoutine"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewRoutine"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewRoutines"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Leaderboard"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewProfile"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateProfile"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameStats"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddFoul"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InGame"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfilesMenu"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewGame"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>